                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.感到情绪低落到无论怎样都无法开心？"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/q1_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完全没有(0)" />

            <RadioButton
                android:id="@+id/q1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="偶尔(1)" />

            <RadioButton
                android:id="@+id/q1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一部分时间(2)" />

            <RadioButton
                android:id="@+id/q1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大部分时间(3)" />

            <RadioButton
                android:id="@+id/q1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部时间(4)" />

            <!-- Repeat for other questions -->
